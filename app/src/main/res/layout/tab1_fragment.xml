<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/tab1ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="300dp"
        android:orientation="horizontal">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=" Loading  ..." />

    </LinearLayout>

    <TableLayout
        android:id="@+id/eventTable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="20dp"
        android:visibility="gone">

        <TableRow
            android:id="@+id/nameRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:text="Artist/Team(s)"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nameText"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:text="name here" />

        </TableRow>

        <TableRow
            android:id="@+id/venueRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:text="Venue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/venueText"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:text="name here" />

        </TableRow>

        <TableRow
            android:id="@+id/timeRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:text="Time"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/timeText"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:text="name here" />

        </TableRow>

        <TableRow
            android:id="@+id/categoryRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:text="Category"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/categoryText"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:text="name here" />

        </TableRow>

        <TableRow
            android:id="@+id/priceRangeRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:text="Price Range"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/priceRangeText"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:text="name here" />

        </TableRow>

        <TableRow
            android:id="@+id/ticketStatusRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:text="Ticket Status"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ticketStatusText"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:text="name here" />

        </TableRow>

        <TableRow
            android:id="@+id/urlRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:text="Buy Ticket At"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/urlLink"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:text="name here" />

        </TableRow>

        <TableRow
            android:id="@+id/seatMapRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:text="Seat Map"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/seatMapLink"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:text="name here" />

        </TableRow>

    </TableLayout>

</RelativeLayout>