<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/tab3ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="300dp"
        android:orientation="horizontal">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=" Loading  ..." />

    </LinearLayout>

    <ScrollView
        android:id="@+id/venueTable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_margin="20dp">

                <TableRow
                    android:id="@+id/venueNameRow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="95dp"
                        android:layout_height="match_parent"
                        android:text="Name"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/venueNameText"
                        android:layout_width="270dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:text="name here" />

                </TableRow>

                <TableRow
                    android:id="@+id/venueAddRow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="95dp"
                        android:layout_height="match_parent"
                        android:text="Address"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/venueAddText"
                        android:layout_width="270dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:text="name here" />

                </TableRow>

                <TableRow
                    android:id="@+id/venueCityRow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="95dp"
                        android:layout_height="match_parent"
                        android:text="City"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/venueCityText"
                        android:layout_width="270dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:text="name here" />

                </TableRow>

                <TableRow
                    android:id="@+id/venuePhoneNumberRow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="95dp"
                        android:layout_height="match_parent"
                        android:text="Phone Number"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/venuePhoneNumberText"
                        android:layout_width="270dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:text="name here" />

                </TableRow>

                <TableRow
                    android:id="@+id/venueOpenHoursRow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="95dp"
                        android:layout_height="match_parent"
                        android:text="Open Hours"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/venueOpenHoursText"
                        android:layout_width="270dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:text="name here" />

                </TableRow>

                <TableRow
                    android:id="@+id/venueGeneralRuleRow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="95dp"
                        android:layout_height="match_parent"
                        android:text="General Rule"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/venueGeneralRuleText"
                        android:layout_width="270dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:text="name here" />

                </TableRow>

                <TableRow
                    android:id="@+id/venueChildRuleRow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="95dp"
                        android:layout_height="match_parent"
                        android:text="Child Rule"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/venueChildRuleText"
                        android:layout_width="270dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:text="name here" />

                </TableRow>

            </TableLayout>

            <com.google.android.gms.maps.MapView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="400dp" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>