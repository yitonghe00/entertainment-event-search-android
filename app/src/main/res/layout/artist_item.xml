<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/artistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:text="Name"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/artistTable"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/artistName">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:text="Name"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/artistText"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:text="name here" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:text="Followers"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/followersText"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:text="followers here" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:text="Followers"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/popularityText"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:text="popularity here" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:text="Check At"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/spotifyText"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:text="Spotify here" />

        </TableRow>

    </TableLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/imageList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/artistTable"></android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>
